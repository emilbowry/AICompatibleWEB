{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",             // Changed to commonjs for Node environment
    "rootDir": "./src",
    "outDir": "./dist",               // Specify output directory for compiled JS
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "jsx": "react-jsx"             // Removed this, generally not needed for backend TS
  },
  "include": [
    "src"
  ]
}